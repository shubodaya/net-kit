{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Net Kit",
  "version": "0.1.0",
  "identifier": "com.netkit.desktop",
  "build": {
    "frontendDist": "./target/desktop-dist-build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npx serve . -l 3000",
    "beforeBuildCommand": "node scripts/prepare-desktop.mjs"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Net Kit",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "fullscreen": false,
        "focus": true,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "nsis",
    "icon": [
      "icons/favicon.ico",
      "icons/icon.png",
      "icons/favicon-16x16.png",
      "icons/favicon-32x32.png",
      "icons/android-chrome-192x192.png",
      "icons/android-chrome-512x512.png"
    ],
    "resources": [
      "../npcap-1.86.exe",
      "../firebase.config.json"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {}
    }
  }
}
